#!/usr/bin/env ruby

require 'wlog/version'
require 'wlog/domain/static_configurations'
require 'wlog/ui/cli_interface'

include Wlog

if ARGV.size > 0
  case ARGV[0]
  when "--list"
    CliInterface.list_databases
  when '--where'
    puts StaticConfigurations::DataDirectory
  when /--/
    puts "Unknown command."
  end
else
  CliInterface.new.run
end

